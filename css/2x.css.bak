a.nav,
a.nav:visited {
outline : none;
color : #FFFFFF;
text-decoration : none; }

a.nav:hover {
outline : none;
color : #FFFFFF;
}
a.nav:active,
a.nav:focus,a.navcurrent:focus,a.navcurrent:active {
outline : none;
color : #999966; }

a.navcurrent,
a.navcurrent:visited {
outline : none;
color : #999966;
text-decoration : none; }

/* 10.CONTENT */
.post{
border-bottom-style : solid;
border-color : #999966;
border-width : 1px;
}
.post-header h3{
margin-bottom: 0;
}
.post-header {
margin-bottom: 10px;
}

.post-info {
font-size:80%;
font-style: italic;
}

